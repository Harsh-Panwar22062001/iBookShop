@model iBookShop.Models.Domain.Genre
@{

}

<div class="container pt-5">
    <div class="row">
        <!-- Added a closing </div> here -->

        <div class="col-md-6">

            <h3>Add Genre</h3>

            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name *</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span> <!-- Fixed className to class -->
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                       @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3"></div> <!-- Added a closing </div> here -->

                <button type="submit" class="btn btn-dark">Save</button>
                <a href="/Genre/GetAll" class="btn btn-primary">List</a>
            </form>

        </div>
    </div> 
</div>
